@model ScoreZone.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background: #007bff;
        background: linear-gradient(to right, #0062E6, #33AEFF);
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-signin" method="post">
                        <div class="form-label-group">
                            <input asp-for="UserName" id="inputEmail" class="form-control" placeholder="Email" required autofocus />
                            <span asp-validation-for="UserName" class="text-warning"></span>
                            <label for="inputEmail">Email</label>
                        </div>

                        <div class="form-label-group">

                            <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Password" required />
                            <span asp-validation-for="Password" class="text-warning"></span>
                            <label for="inputPassword">Contraseña</label>
                        </div>



                        <div class="custom-control custom-checkbox mb-3">
                           
                            <input asp-for="RememberMe" type="checkbox"  class="custom-control-input"  />
                            <span asp-validation-for="RememberMe" class="text-warning"></span>
                            <label class="custom-control-label"  asp-for="RememberMe"></label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Iniciar sesión</button>
                        <hr class="my-4">
                        @*<button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>*@
                    </form>
                </div>
            </div>

        </div>
    </div>
    </div>
